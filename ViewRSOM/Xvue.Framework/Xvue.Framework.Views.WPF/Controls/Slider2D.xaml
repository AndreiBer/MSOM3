<UserControl x:Class="Xvue.Framework.Views.WPF.Controls.Slider2D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" SizeChanged="UserControl_SizeChanged">
	<Grid>
        <Canvas x:Name="slider2DCanvas" Background="#FF8A8888">
            <Ellipse x:Name="cp1Thumb" Width="9" Height="9" Fill="Yellow" PreviewMouseMove="cpThumb_PreviewMouseMove" PreviewMouseLeftButtonUp="cpThumb_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="cpThumb_PreviewMouseLeftButtonDown">				
			</Ellipse>
		</Canvas>
	</Grid>
</UserControl>
